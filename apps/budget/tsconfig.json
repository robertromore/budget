{
  "extends": "@budget/config/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$ui": ["../../packages/ui/src/lib"],
      "$ui/*": ["../../packages/ui/src/lib/*"]
    },
    "tsBuildInfoFile": ".svelte-kit/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte", 
    "tests/**/*.ts",
    "scripts/**/*.ts",
    ".templates/**/*.ts",
    ".svelte-kit/ambient.d.ts"
  ]
}
