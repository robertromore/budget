{
  "name": "@budget/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Shared UI components using shadcn-svelte",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./theme.css": "./src/theme.css",
    "./styles.css": "./dist/styles.css",
    "./button": "./src/lib/components/ui/button/index.ts",
    "./input": "./src/lib/components/ui/input/index.ts",
    "./label": "./src/lib/components/ui/label/index.ts",
    "./textarea": "./src/lib/components/ui/textarea/index.ts",
    "./checkbox": "./src/lib/components/ui/checkbox/index.ts",
    "./badge": "./src/lib/components/ui/badge/index.ts",
    "./switch": "./src/lib/components/ui/switch/index.ts",
    "./separator": "./src/lib/components/ui/separator/index.ts",
    "./slider": "./src/lib/components/ui/slider/index.ts",
    "./select": "./src/lib/components/ui/select/index.ts",
    "./tooltip": "./src/lib/components/ui/tooltip/index.ts",
    "./skeleton": "./src/lib/components/ui/skeleton/index.ts",
    "./utils": "./src/lib/utils.ts"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --content '../../apps/budget/src/**/*.{html,js,svelte,ts}'",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch --content '../../apps/budget/src/**/*.{html,js,svelte,ts}'",
    "check": "bunx svelte-check --tsconfig ./tsconfig.json"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@lucide/svelte": "^0.526.0",
    "@tailwindcss/cli": "^4.1.13",
    "bits-ui": "^2.9.6",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^1.0.0"
  },
  "devDependencies": {
    "@budget/config": "workspace:*",
    "svelte": "^5.0.0",
    "typescript": "^5.6.3"
  }
}