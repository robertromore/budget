{
  "name": "@layerchart-wrapper/charts",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./config/chart-config": {
      "types": "./dist/config/chart-config.d.ts",
      "default": "./dist/config/chart-config.js"
    },
    "./config/chart-types": {
      "types": "./dist/config/chart-types.d.ts",
      "default": "./dist/config/chart-types.js"
    },
    "./config/config-resolver": {
      "types": "./dist/config/config-resolver.d.ts",
      "default": "./dist/config/config-resolver.js"
    },
    "./config/layerchart-registry": {
      "types": "./dist/config/layerchart-registry.d.ts",
      "default": "./dist/config/layerchart-registry.js"
    },
    "./processors/chart-data-processor.svelte": {
      "types": "./dist/processors/chart-data-processor.svelte.d.ts",
      "default": "./dist/processors/chart-data-processor.svelte.js"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "default": "./dist/icons/index.js"
    },
    "./unified-chart.svelte": {
      "types": "./dist/unified-chart.svelte.d.ts",
      "svelte": "./dist/unified-chart.svelte",
      "default": "./dist/unified-chart.svelte"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev --port 5174",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "layerchart": "^2.0.0-next.37",
    "@internationalized/date": "^3.9.0",
    "d3-scale": "^4.0.2",
    "d3-shape": "^3.2.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.36.3",
    "@sveltejs/package": "^2.3.2",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@tailwindcss/vite": "^4.0.0-beta.9",
    "publint": "^0.1.9",
    "svelte": "^5.38.5",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.0.0-beta.9",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "@budget-configs/typescript": "workspace:*"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "bits-ui": "^2.9.4",
    "@lucide/svelte": "^0.526.0",
    "@budget-shared/utils": "workspace:*"
  }
}
