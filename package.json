{
  "name": "budget-monorepo",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/layerchart-wrapper",
    "packages/shared-utils",
    "packages/configs/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check": "turbo run check",
    "dev:budget": "turbo run dev --filter=budget",
    "build:budget": "turbo run build --filter=budget",
    "test:budget": "turbo run test --filter=budget"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  }
}
